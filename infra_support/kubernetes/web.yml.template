---
apiVersion: v1
kind: Service
metadata:
  name: web
  labels:
    name: web
spec:
  type: NodePort
  ports:
  - port: 8080
    targetPort: 8080
    protocol: TCP
    name: web
  externalIPs:
    - NODE_EXTERNAL_IP
  selector:
    name: web

---
apiVersion: v1
kind: ReplicationController
metadata:
  name: web
  labels:
    name: web
spec:
  replicas: 1
  selector:
    name: web
  template:
    metadata:
      labels:
        name: web
    spec:
      containers:
      - name: web
        image: sloppycoder/ibank-web
        env:
        - name: GET_HOSTS_FROM
          value: dns
        ports:
        - containerPort: 8080

